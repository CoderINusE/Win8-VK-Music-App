        <Setter Property="Foreground" Value="#FF1C1C1C" />
        <Setter Property="Background" Value="{StaticResource ComboBoxBackgroundThemeBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource ComboBoxBorderThemeBrush}" />
